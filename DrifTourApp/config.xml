<?xml version='1.0' encoding='utf-8'?>
<widget id="com.driftour.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DrifTour</name>
    <description>Descubre Bilbao con tours personalizados e interactivos</description>
    <author email="contact@driftour.com" href="https://driftour.com">
        DrifTour Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    
    <platform name="android">
        <icon density="mdpi" src="www/icons/icon-192x192.png" />
        <icon density="hdpi" src="www/icons/icon-192x192.png" />
        <icon density="xhdpi" src="www/icons/icon-192x192.png" />
        <icon density="xxhdpi" src="www/icons/icon-192x192.png" />
        <icon density="xxxhdpi" src="www/icons/icon-192x192.png" />
        <allow-intent href="market:*" />
    </platform>
    
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="http://*/*" />
</widget>
